<%- include("header"); -%>
<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>
<div class="box">
  <% newItems.forEach(function(item){%>
    <form action="/delete" method="post">
  <div class="item">
    <input onChange="this.form.submit()" name="checkbox" value="<%=item._id%>" type="checkbox">
    <p><%=item.name%></p> <!--Access only the name field of each document!-->
    <!-- Need to extract listTitle when deleting item!-->
    <input type = "hidden" name="listName" value="<%=listTitle%>"></input>
  </div>
  </form>
  <%})%>
    <form class="item" action="/" method="post">
      <input type="text" name="toDo" placeholder="Add something" autocomplete="off">
      <button type="submit" name="list" value="<%= listTitle %>">+</button>

  </form>
</div>
<%- include("footer"); -%>
